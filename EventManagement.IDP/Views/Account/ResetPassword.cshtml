                <div class="content-wrapper">
                    <!--Login Page Starts-->
                    <section id="login">
                        <nav class="navbar navbar-default navbar-fixed-top bg-white" style="box-shadow: 2px 2px #e9e6e6;" role="navigation">
                            <a class="navbar-brand" href="#">
                                <img src="~/ei-logo.png" width="70%" height="70%" alt="" />
                            </a>
                            <ul class="nav navbar-nav" style="padding-right: 1%;">
                                <div class="row">
                                    <li style="font-size: large;">New to White Label Board? &nbsp;</li>
                                    <li style="font-size: large; color: #5D9CEC;">Create an Account</li>
                                </div>
                            </ul>
                        </nav>
                        <div class="row">
                            <div class="col-md-4"></div>
                            <div class="col-md-5">
                                <div class="card card-default shadow p-3 mb-5 bg-white rounded">
                                    <div class="row">
                                        <div class="col-md-1"></div>
                                        <div class="col-md-10" style="padding-top:3%;">
                                            <p class="row d-flex align-items-center justify-content-center" style=" font-size:24px; font-weight:500">Enter your new password</p><br />
                                            <form asp-route="ResetPassword" method="post" class="form-horizontal">
                                                <input asp-for="Token" type="hidden" />
                                                <input asp-for="Email" type="hidden" />
                                                <div class="form-group">
                                                    <label asp-for="Password" style="font-size:large; color:black; text-transform:none; letter-spacing: normal !important;">Password</label>
                                                    <input asp-for="Password" class="form-control" placeholder="Password" style="height: 3.00rem;" />
                                                    <span asp-validation-for="Password" class="text-danger"></span>
                                                </div>
                                                <div class="form-group">
                                                    <label asp-for="ConfirmPassword" style="font-size:large; color:black; text-transform:none; letter-spacing: normal !important;">Confirm new password</label>
                                                    <input asp-for="ConfirmPassword" class="form-control" placeholder="Confirm Password" style="height: 3.00rem;"/>
                                                    <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                                </div>
                                                <div class="text-center">
                                                    <button type="submit" class="btn btn-primary text-white " style="font-size:large">Submit</button>
                                                </div>
                                                <partial name="_ValidationSummary" />
                                            </form>
                                            <p style="font-size:18px;" class="text-center"><a href="~/grants">Back to Login</a></p>
                                        </div>
                                        <div class="col-md-1"></div>
                                    </div>
                                </div>
                            </div>
                            <div class="col-md-3"></div>
                        </div>
                    </section>
                    <!--Login Page Ends-->

                </div>
            </div>
        </div>
    </div>

